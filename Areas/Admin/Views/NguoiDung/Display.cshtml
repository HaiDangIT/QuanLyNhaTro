@model DACS2.Models.NguoiDung

@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Thông tin cá nhân</h2>

    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" alt="Hình ảnh" class="img-thumbnail" style="width: 100%; height: auto;" />
            }
            else
            {
                <img src="/img/nen1.jpg" alt="No Image" class="img-thumbnail" />
            }
        </div>

        <div class="col-md-8">
            <table class="table table-bordered">
                <tr>
                    <th>Họ tên:</th>
                    <td>@Model.HoTen</td>
                </tr>
                <tr>
                    <th>Giới tính:</th>
                    <td>
                        @(Model.GioiTinh == 1 ? "Nam" : Model.GioiTinh == 0 ? "Nữ" : "Khác/Không xác định")
                    </td>
                </tr>
                <tr>
                    <th>Ngày sinh:</th>
                    <td>@Model.NgaySinh</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Số điện thoại:</th>
                    <td>@Model.SDT</td>
                </tr>
                <tr>
                    <th>Địa chỉ:</th>
                    <td>@Model.DiaChi</td>
                </tr>

            </table>
        </div>
    </div>

