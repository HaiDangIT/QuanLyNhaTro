@using DACS2.ViewModels;
@model List<DACS2.ViewModels.BaiHocViewModel>
@using Newtonsoft.Json


<canvas id="pieChartBaiHoc" width="400" height="400"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<script>
    const ctx = document.getElementById('pieChartBaiHoc').getContext('2d');
    const pieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: @Html.Raw(JsonConvert.SerializeObject(Model.Select(x => x.BaiHoc))),
            datasets: [{
                data: @Html.Raw(JsonConvert.SerializeObject(Model.Select(x => x.SoBai))),
                backgroundColor: ['#FF6384','#36A2EB','#FFCE56','#4BC0C0','#9966FF','#FF9F40']
            }]
        },
        options: {
            plugins: {
                title: {
                    display: true,
                    text: 'Số lượng bài học theo khóa học'
                }
            }
        }
    });
</script>
