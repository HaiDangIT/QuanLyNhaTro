@model DACS2.Models.KhoaHoc

@{
    ViewData["Title"] = "Chi tiết khóa học";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="background: #fff;">
        <div class="card-body">
            <div class="mb-4 text-center">
                <h2 class="text-primary fw-bold">
                    <i class="bi bi-journal-text me-2"></i> @Model.TenKhoaHoc
                </h2>
                <p class="text-muted">Khóa học chi tiết & thông tin học phí</p>
                <hr />
            </div>

            <div class="row">
                <div class="col-md-8">
                    <h5 class="fw-semibold text-dark mb-2">
                        <i class="bi bi-info-circle-fill text-info me-2"></i> Mô tả khóa học
                    </h5>
                    <p class="text-muted" style="font-size: 1.1rem;">@Html.Raw(Model.MoTa)</p>
                </div>

                <div class="col-md-4">
                    <div class="p-4 bg-light rounded-4 text-center shadow-sm">
                        <h5 class="fw-bold text-dark mb-3">
                            <i class="bi bi-cash-coin text-success me-2"></i> Học phí
                        </h5>
                        <p class="h4 text-success fw-bold">@Model.Gia.ToString("N0") VNĐ</p>
                    </div>
                </div>
            </div>

            <div class="text-center mt-5">
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
                    <i class="bi bi-arrow-left-circle me-1"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
