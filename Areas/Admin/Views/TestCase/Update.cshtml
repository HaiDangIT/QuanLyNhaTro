@model DACS2.Models.TestCase

<link rel="stylesheet" href="~/css/style_Admin_2.css" asp-append-version="true" />

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 class="my-4 container">Cập nhật đề bài</h2>

<form asp-area="Admin" asp-controller="TestCase" asp-action="Update" method="post" class="form-1" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="BaiHocId" class="form-label">Chọn Bài Học</label>
        <select asp-for="BaiHocId" asp-items="ViewBag.BaiHoc" class="form-select" required>
            <option value="">-- Chọn bài học --</option>
        </select>
        <span asp-validation-for="BaiHocId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CssSelector" class="form-label">CSS Selector</label>
        <input asp-for="CssSelector" class="form-control" required />
        <span asp-validation-for="CssSelector" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TestType" class="form-label">Loại kiểm tra</label>
        <input asp-for="TestType" class="form-control" required />
        <span asp-validation-for="TestType" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Property" class="form-label">Thuộc tính</label>
        <input asp-for="Property" class="form-control" required />
        <span asp-validation-for="Property" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExpectedValue" class="form-label">Giá trị mong đợi</label>
        <input asp-for="ExpectedValue" class="form-control" required />
        <span asp-validation-for="ExpectedValue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>


