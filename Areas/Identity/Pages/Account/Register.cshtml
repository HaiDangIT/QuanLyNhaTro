@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = null; // Nếu bạn có layout, thay đổi dòng này
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/styde_LogRe.css" />
</head>
<body>
    <div class="container right-panel-active" id="container">
        <!-- Sign Up Form -->
        <div class="container__form container--signup">

            <form class="form-2" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="form__title">Create Account</h2>

                <div class="form-group">
                    <input asp-for="Input.FullName" class="input" placeholder="Full Name" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="number" asp-for="Input.Tuoi" class="input" placeholder="Tuổi" />
                    <span asp-validation-for="Input.Tuoi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.DiaChi" class="input" placeholder="Địa chỉ" />
                    <span asp-validation-for="Input.DiaChi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="date" asp-for="Input.NgaySinh" class="input" placeholder="Ngày sinh" />
                    <span asp-validation-for="Input.NgaySinh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="Input.GioiTinh" class="input">
                        <option value="">-- Select Gender --</option>
                        <option value="0">Male</option>
                        <option value="1">Female</option>
                    </select>
                    <span asp-validation-for="Input.GioiTinh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.SDT" class="input" placeholder="Phone Number" />
                    <span asp-validation-for="Input.SDT" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.Email" class="input" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.Password" class="input" placeholder="Password" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="input" placeholder="Confirm Password" type="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Register</button>

                <div class="mt-3 text-center">
                    <a asp-page="./Login" class="link">Already have an account? Sign In</a>
                </div>
            </form>

        </div>

        <div class="container__overlay">
            <div class="overlay">
                <div class="overlay__panel overlay--left">
                    <a asp-page="./Login">
                        <button class="btn" id="signIn">Sign In</button>
                    </a>
                </div>
            </div>
        </div>

        <!-- Overlay -->

    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

<style>
    body {
        overflow: hidden; /* nếu bạn muốn toàn bộ chỉ scroll phần form */
        /* nếu bạn muốn scroll cả body */
    }

    .container__form.container--signup {
        max-height: 90vh; /* hoặc giá trị tùy theo thiết kế */
        overflow-y: auto;
    }

        /* Ẩn thanh cuộn ngang nếu có */
        .container__form.container--signup::-webkit-scrollbar {
            width: 4px;
        }

        .container__form.container--signup::-webkit-scrollbar-thumb {
            background: #ccc;
            border-radius: 4px;
        }

    .form-2 {
        width: 100%;
        max-width: 400px; /* hoặc 100% nếu responsive hoàn toàn */
        margin: 0 auto;
        padding: 30px 25px;
        box-sizing: border-box;
    }

    .input {
        width: 100%;
        padding: 12px 15px;
        font-size: 15px;
        border: 1px solid #ccc;
        border-radius: 6px;
        box-sizing: border-box;
        margin-bottom: 15px;
        background-color: #fff;
        transition: border-color 0.3s;
    }

        .input:focus {
            outline: none;
            border-color: #66afe9;
            box-shadow: 0 0 5px rgba(102, 175, 233, 0.5);
        }

    button.btn.btn-primary {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        transition: background-color 0.3s;
        cursor: pointer;
    }

        button.btn.btn-primary:hover {
            background-color: #0056b3;
        }

</style>