@model DACS2.Models.VnPay.PaymentResponseModel


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow rounded-4" style="min-width: 400px; max-width: 600px;">
        <div class="card-body text-center p-5">
            @if (Model.Success)
            {
                <div class="text-success mb-4">
                    <i class="bi bi-check-circle-fill" style="font-size: 3rem;"></i>
                    <h2 class="mt-3">Thanh toán thành công!</h2>
                    <p class="lead">Mã đơn hàng: <strong>@Model.OrderId</strong></p>
                    <p class="lead">Mã giao dịch: <strong>@Model.TransactionId</strong></p>
                    <p class="lead">Khóa học: <strong>@Model.Name</strong></p>
                    <p class="lead">Số tiền: <strong>@Model.Amount.ToString("N0") VNĐ</strong></p>
                    <p class="lead">Nội dung: <strong>@Model.OrderDescription</strong></p>
                </div>
            }
            else
            {
                <div class="text-danger mb-4">
                    <i class="bi bi-x-circle-fill" style="font-size: 3rem;"></i>
                    <h2 class="mt-3">Thanh toán thất bại</h2>
                    <p class="lead">@Model.Message</p>
                </div>
            }

            <a href="/" class="btn btn-primary mt-4 px-4">Quay về trang chủ</a>
        </div>
    </div>
</div>